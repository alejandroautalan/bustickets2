<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}BusTickets - Bienvenido{% endblock %}</title>
        <link rel="icon" type="image/ico" href="{{ asset('favicon.ico') }}">
        {% block stylesheets %}
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('site') }}{% endblock %}
        {% endblock %}
    </head>
    <body>
    {% block body %}
        {% block topmenu %}
        <div class="header">
            <div class="home-menu pure-menu pure-menu-horizontal is-center">
                <a class="pure-menu-heading" href="">Bustickets</a>
                <ul class="pure-menu-list">
                    <li class="pure-menu-item pure-menu-selected">
                        <a href="{{ url("app_home") }}" class="pure-menu-link">Inicio</a>
                    </li>
                    <li class="pure-menu-item">
                        <a href="{{ url("login") }}" class="pure-menu-link">Login</a>
                    </li>
                </ul>
            </div>
        </div>
        {% endblock %}
        <div class="pure-g is-center">
            <div class="pure-u-1-4">{% block body_left %}{% endblock %}</div>
            <div class="pure-u-1-3">{% block body_center %}{% endblock %}</div>
            <div class="pure-u-1-3">{% block body_right %}{% endblock %}</div>
        </div>
    {% endblock %}
    </body>
</html>
